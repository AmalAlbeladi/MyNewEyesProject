<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/mainSignIn_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="sans-serif"
        android:text="Welcome to MY NEW EYES!"
        android:textColor="@color/lavender"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="40dp" />


    <Button
        android:id="@+id/mainSignIn_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/lavender"
        android:text="Sign in"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="700dp" />

    <Button
        android:id="@+id/mainSignUp_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/lavender"
        android:text="Sign up"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="800dp" />


</LinearLayout>